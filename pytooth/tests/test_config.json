{
    "logging": {
        "version": 1,
        "disable_existing_loggers": false,
        "formatters": {
            "simple": {
                "class": "logging.Formatter",
                "format": "%(asctime)s::%(levelname)s::%(name)s::%(funcName)s::%(message)s"
            }
        },

        "handlers": {
            "console": {
                "class": "logging.StreamHandler",
                "level": "DEBUG",
                "formatter": "simple",
                "stream": "ext://sys.stdout"
            },
            "file": {
                "class": "logging.FileHandler",
                "level": "DEBUG",
                "formatter": "simple",
                "filename": "output.log"
            }
        },

        "loggers": {
            "pytooth": {
                "level": "DEBUG",
                "handlers": ["console"],
                "propagate": false
            }
        },

        "root": {
            "level": "DEBUG",
            "handlers": ["console"]
        }
    },

    "profiles": ["a2dp"],
    "preferredaddress": "",
    "retryinterval": 15,
    "alsasink": "default",
    "alsasource": "default"
}
